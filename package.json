{
  "name": "vex",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "check": "biome check --use-editorconfig true",
    "check:types": "turbo run check:types",
    "dev": "skaffold dev --kube-context=minikube --auto-build=false",
    "format": "biome format --write --use-editorconfig true",
    "plop": "NODE_OPTIONS='--import tsx' plop --plopfile=plopfile.ts",
    "test": "turbo run test"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.5",
    "@bltx/plop": "1.4.2",
    "@tsconfig/bun": "1.0.7",
    "@types/bun": "1.3.0",
    "plop": "4.0.1",
    "tsx": "4.19.4",
    "turbo": "2.5.2",
    "typescript": "5.7.2"
  },
  "overrides": {
    "@sinclair/typebox": "0.34.33"
  },
  "packageManager": "bun@1.3.0"
}
