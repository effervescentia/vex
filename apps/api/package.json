{
  "name": "@vex/api",
  "type": "module",
  "main": "src/lib.ts",
  "scripts": {
    "build": "bun build ./src/main.ts --outdir ./build --target bun",
    "check:types": "tsc --noEmit",
    "dev": "bun --watch src/main.ts",
    "db:clean": "rimraf data.db",
    "db:push": "bun ./scripts/db-push.ts",
    "test": "NODE_ENV=test bun test",
    "test:unit": "glob '**/!(*.it).test.ts' | xargs -- bun run test",
    "test:integration": "glob '**/*.it.test.ts' | xargs -- bun run test",
    "tdd": "bun run test --watch"
  },
  "dependencies": {
    "@bltx/core": "1.5.0",
    "@bltx/db": "1.6.3",
    "@elysiajs/cors": "1.3.3",
    "@passwordless-id/webauthn": "2.3.1",
    "date-fns": "4.1.0",
    "drizzle-orm": "0.44.3",
    "drizzle-typebox": "0.3.3",
    "elysia": "1.3.6",
    "human-id": "4.1.2",
    "parse-duration": "2.1.4"
  },
  "devDependencies": {
    "@bltx/test": "1.4.6",
    "@electric-sql/pglite": "0.3.5",
    "drizzle-kit": "0.31.4",
    "glob": "11.0.3",
    "jest-date": "1.1.6",
    "rimraf": "6.0.1"
  }
}
