{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "inputs": ["src/**", "public/**", "index.html", "vite.config.mts", "tsconfig.json", "bunfig.toml"],
      "outputs": ["build/**"]
    },
    "check:types": {
      "inputs": ["src/**", "types/**", "tsconfig.json"]
    },
    "test": {
      "inputs": ["src/**"],
      "cache": false
    },
    "test:unit": {
      "inputs": ["src/**"],
      "cache": false
    },
    "test:integration": {
      "inputs": ["src/**"],
      "cache": false
    }
  }
}
